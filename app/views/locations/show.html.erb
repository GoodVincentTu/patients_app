<h1>Locations show</h1>
<p>Code: <%= @location.code %></p>
<p>Name: <%= @location.name %></p>


<table>
  <thead>
    <tr>
      <th colspan="3" >Name</th>
      <th>Gender</th>
      <th>Birth</th>
      <th>Status</th>
      <th>Location</th>
      <th>Viewed Count</th>
      <th colspan="2" >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td colspan="3" ><%= link_to patient.first_name + patient.middle_name + patient.last_name, patient %></td>
        <td><%= @gender_select[patient.gender].last.split('_').join(' ').capitalize %></td>
        <td><%= patient.birth %></td>
        <td><%= patient.status %></td>
        <td><%= link_to patient.location.name, location_show_patient_path(patient.location) %></td>
        <td style="margin: auto;"><%= patient.viewed_count %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>